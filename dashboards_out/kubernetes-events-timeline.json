{
   "__inputs": [ ],
   "__requires": [ ],
   "description": "A dashboard that monitors Kubernetes Events and focuses on giving a timeline for events. It is created using the [kubernetes-events-mixin](https://github.com/adinhodovic/kubernetes-events-mixin). A pre requisite is configuring Loki, Alloy and Prometheus - it is described in this blog post: https://hodovi.cc/blog/kubernetes-events-monitoring-with-loki-alloy-and-grafana/",
   "editable": true,
   "links": [
      {
         "tags": [
            "kubernetes",
            "kubernetes-events",
            "kubernetes-events-mixin"
         ],
         "targetBlank": true,
         "title": "Kubernetes Events",
         "type": "dashboards"
      }
   ],
   "panels": [
      {
         "collapsed": false,
         "gridPos": {
            "h": 1,
            "w": 24,
            "x": 0,
            "y": 0
         },
         "id": 1,
         "title": "Events Logs ($cluster / $kind / $namespace / $name - name)",
         "type": "row"
      },
      {
         "datasource": {
            "type": "loki",
            "uid": "$datasource"
         },
         "description": "Logs of events for the selected Kubernetes resource. Log line limit is at 200 events.",
         "gridPos": {
            "h": 10,
            "w": 24,
            "x": 0,
            "y": 1
         },
         "id": 2,
         "options": {
            "enableLogDetails": true,
            "showTime": true,
            "wrapLogMessage": true
         },
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "loki",
                  "uid": "$datasource"
               },
               "expr": "{job=~\"$job\", cluster=~\"$cluster\", k8s_resource_kind=\"$kind\", k8s_namespace_name=\"$namespace\"} | k8s_resource_name=~\"$name.*\" |~ \"$search\" | json | line_format \"Name: {{ .name }}\\nType: {{ .type }}\\nReason: {{.reason}}\\nMsg: {{.msg}}\"\n",
               "maxLines": 200
            }
         ],
         "title": "Events",
         "type": "logs"
      },
      {
         "datasource": {
            "type": "loki",
            "uid": "$datasource"
         },
         "description": "Timeline of events for the selected Kubernetes resource. Please use the search filter, otherwise there will be too many events. Log line limit is at 100 events.",
         "fieldConfig": {
            "defaults": {
               "custom": {
                  "insertNulls": 300000
               },
               "mappings": [
                  {
                     "options": {
                        "pattern": ".*Normal.*",
                        "result": {
                           "color": "green",
                           "index": 0
                        }
                     },
                     "type": "regex"
                  },
                  {
                     "options": {
                        "pattern": ".*Warning.*",
                        "result": {
                           "color": "orange",
                           "index": 1
                        }
                     },
                     "type": "regex"
                  }
               ]
            },
            "overrides": [ ]
         },
         "gridPos": {
            "h": 12,
            "w": 24,
            "x": 0,
            "y": 9
         },
         "id": 3,
         "pluginVersion": "v11.4.0",
         "targets": [
            {
               "datasource": {
                  "type": "loki",
                  "uid": "$datasource"
               },
               "expr": "{job=\"$job\", cluster=~\"$cluster\", k8s_resource_kind=\"$kind\", k8s_namespace_name=\"$namespace\"} | k8s_resource_name=~\"$name.*\" |~ \"$search\" | json | line_format `{\"{{ .kind }} / {{ .name }}\": \"Type: {{ .type }} | Reason: {{ .reason }} | Event: {{ .msg | replace \"\\\"\" \"'\" }}\"}`\n",
               "maxLines": 100
            }
         ],
         "title": "Events Timeline",
         "transformations": [
            {
               "id": "extractFields",
               "options": {
                  "delimiter": ",",
                  "format": "json",
                  "keepTime": true,
                  "replace": true,
                  "source": "Line"
               }
            }
         ],
         "type": "state-timeline"
      }
   ],
   "schemaVersion": 39,
   "tags": [
      "kubernetes",
      "kubernetes-events",
      "kubernetes-events-mixin"
   ],
   "templating": {
      "list": [
         {
            "label": "Data source",
            "name": "datasource",
            "query": "loki",
            "type": "datasource"
         },
         {
            "datasource": {
               "type": "loki",
               "uid": "${datasource}"
            },
            "label": "Job",
            "name": "job",
            "query": "label_values(job)",
            "refresh": 2,
            "regex": ".*events.*",
            "sort": 1,
            "type": "query"
         },
         {
            "datasource": {
               "type": "loki",
               "uid": "${datasource}"
            },
            "label": "Kind",
            "name": "kind",
            "query": {
               "label": "k8s_resource_kind",
               "stream": "{job=~\"$job\", cluster=~\"$cluster\"}",
               "type": "1"
            },
            "refresh": 2,
            "sort": 1,
            "type": "query"
         },
         {
            "datasource": {
               "type": "loki",
               "uid": "${datasource}"
            },
            "label": "Namespace",
            "name": "namespace",
            "query": {
               "label": "k8s_namespace_name",
               "stream": "{job=~\"$job\", cluster=~\"$cluster\", k8s_resource_kind=\"$kind\"}",
               "type": "1"
            },
            "refresh": 2,
            "sort": 1,
            "type": "query"
         },
         {
            "description": "Name of the Kubernetes resource. Use the search, otherwise there is too many unique resources.",
            "label": "Name",
            "name": "name",
            "query": "",
            "type": "textbox"
         },
         {
            "description": "Generic search of the event.",
            "label": "Search",
            "name": "search",
            "query": "",
            "type": "textbox"
         }
      ]
   },
   "time": {
      "from": "now-3h",
      "to": "now"
   },
   "timezone": "utc",
   "title": "Kubernetes / Events / Timeline",
   "uid": "kubernetes-events-mixin-timeline-jkwq"
}
